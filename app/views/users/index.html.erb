<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

      <h2>User info</h2>
      <%= render 'info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>

      <h2>Users</h2>
      <% if current_user.name == "nonbe" %>
        <h1>あなたは飲兵衛さんですね！！！！</h1>
        <h1>こちらをお受け取りください。</h1>
        <h1>あなたは3点を受け取った。</h1>
      <% end %>
      <%= render 'index', users: @users %>
    </div>
  </div>
</div>
